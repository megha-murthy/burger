<div class="header">
<h1 >Eat-Da-Burger!</h1>
<img src="/assets/css/monster_burger.png">
</div>

<ol class="left">
    {{#each burger_name}}
        {{#unless devoured}}
        <div class="inside">
        <li>
            <textarea class="before">{{burger_name}}</textarea>
            <button class="devour-it" data-id="{{id}}" > Devour it!
            </button>
        </li>
        </div>
        {{/unless}}
    {{/each}}
</ol>

<ol class="right">
  {{#each burger_name}}
    {{#if devoured}}
        <li>
        <textarea readonly class="dev">{{burger_name}}</textarea>
        </li>
    {{/if}}
  {{/each}}
</ol>


<form class="create-form">
  <div class="form-group">

    <textarea type="text" name="burger_name" id="bur"></textarea>
    <br>
    <br> 
    <button type="submit" id="sub">Submit</button>
    <p>Enter a burger you want to eat and Click the "Submit" button</p>

  </div>
</form>